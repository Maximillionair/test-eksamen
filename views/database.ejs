<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reinsdyr Database</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/app.js" defer></script>
</head>
<body>
    <header>
        <h1>Reinsdyr Database</h1>
    </header>

    <section>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Navn</th>
                    <th>Alder</th>
                    <th>Eier</th>
                    <th>Lokasjon</th>
                </tr>
            </thead>
            <tbody>
                <% if (reindeerList.length > 0) { %>
                    <% reindeerList.forEach(reindeer => { %>
                        <tr>
                            <td><%= reindeer.id %></td>
                            <td><%= reindeer.name %></td>
                            <td><%= reindeer.age %></td>
                            <td><%= reindeer.owner %></td>
                            <td><%= reindeer.location %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5">Ingen reinsdyr funnet i databasen.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </section>

    <footer>
        <p>Â© 2025 Kukkik Ano - Samisk Reinsdyrregistrering</p>
    </footer>


</body>
</html>
